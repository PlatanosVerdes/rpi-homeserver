{
  "title": "Acestream Homelab Monitor",
  "panels": [
    {
      "type": "stat",
      "title": "Download Errors (Last 24h)",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 0,
        "y": 0
      },
      "targets": [
        {
          "expr": "increase(acestream_update_errors[24h])",
          "refId": "A",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "decimals": 0,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 0.1
              }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Last Execution Status",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 6,
        "y": 0
      },
      "targets": [
        {
          "expr": "time() - acestream_last_run_timestamp",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "orange",
                "value": 15000
              },
              {
                "color": "red",
                "value": 20000
              }
            ]
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Daily Executions",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 12,
        "y": 0
      },
      "targets": [
        {
          "expr": "increase(acestream_run_total[24h])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "decimals": 0,
          "color": {
            "mode": "fixed",
            "fixedColor": "blue"
          }
        }
      }
    },
    {
      "type": "stat",
      "title": "Playlist Changes (Last 24h)",
      "gridPos": {
        "h": 8,
        "w": 6,
        "x": 18,
        "y": 0
      },
      "targets": [
        {
          "expr": "increase(acestream_updates_with_changes[24h])",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "decimals": 0,
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "light-blue",
                "value": null
              },
              {
                "color": "purple",
                "value": 1
              }
            ]
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Execution History",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 8
      },
      "targets": [
        {
          "expr": "acestream_run_total",
          "legendFormat": "Total Runs",
          "refId": "A"
        },
        {
          "expr": "acestream_update_errors",
          "legendFormat": "Accumulated Errors",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "stepAfter"
          }
        }
      }
    }
  ],
  "schemaVersion": 38
}